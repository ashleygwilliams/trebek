%h1 set
.board
  - @cards[0..11].each_slice(3) do |slice|
    .row
      - slice.each do |card|
        = partial :set_card, @card=card

.button
  Reshuffle deck

.deck.hidden
  - @cards[12..80].shuffle.each do |card|
    = partial :set_card, @card=card

