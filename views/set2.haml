%h1 set

.score
  %h3 cards remaining: 81
  %h3 

.button
  %h3 click to reshuffle deck

.hint
  %h3 hint?

.board
  - @cards[0..11].each_slice(3) do |slice|
    .row
      - slice.each do |card|
        = partial :set_card, @card=card

.deck.hidden
  - @cards[12..80].each do |card|
    = partial :set_card, @card=card

